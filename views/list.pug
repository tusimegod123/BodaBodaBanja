    h2 List of Registered Customers
    form.form-group(action='/findcustomerr')
     div.row
      div.col-md-6
       input.form-control(type='text' placeholder='Enetr The Full Name' name='fullName')
      .col-md-3
        input.btn.btn-primary(type='submit' value='Search')  
      .col-md-3
       button.btn.btn-primary#addcustomer
         a(href="/customer") Add New Customer  
    div.container-fluid  
     table.table
      thead.thead-dark
       each customer in customers
        tr
          th  1. Full Name
          td  #{customer.fullName}
          td
            button.btn.btn-primary#addcustomer
             a(href=`/findcustomer/${customer._id}`)  View customer Details
        tr
          th   2. Current Date
          td  #{customer.currentDate}
        tr  
          th   3. Nationality
          td  #{customer.nationality}
        tr   
          th   4. Phone Number
          td  #{customer.contact}
        tr  
          th   5. NIN
          td  #{customer.nin}
        tr  
          th  6. Date of Birth
          td  #{customer.dob} 
        tr  
          th   7. Kind of Vihecle
          td  #{customer.kindOfVehicle} 
        tr  
          th  8. Referees Name
          td  #{customer.refreesName}
        tr  
          th   9.Referees Contact
          td  #{customer.refNumber}
        tr   
          th   10. Referees Work
          td  #{customer.refWork} 
        tr  
          th  11. Refrees Date of Birth
          td  #{customer.refdob}
        tr  
          th   12. Down Payment
          td  #{customer.downPayment} 
        tr  
          th   13. Marital Status
          td  #{customer.status}
        tr  
          th   14. Other Loans incase Any
          td  #{customer.otherLoans}
        tr  
          th   15. Stage Name
          td  #{customer.stageName} 
        tr  
          th   17. LC1
          td  #{customer.lc1}
        tr 
          th   19. LC3
          td  #{customer.lc3} 
        tr 
          th   20. Stage Leader's Name
          td  #{customer.stageleader}  
